<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_gravity="center_vertical"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivNewNews"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="15dp"
        android:src="@drawable/circle"
        android:layout_centerVertical="true"

        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/ivNewNews"
        android:layout_toLeftOf="@+id/ivMoreNews"
        android:orientation="vertical"
        android:padding="@dimen/padding2"

        >

        <TextView
            android:id="@+id/tvTitleNews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/textSize_m"
            android:textColor="@color/black"
            android:textStyle="normal"

            />

        <TextView
            android:id="@+id/tvDescriptionNews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/textSize_m"
            android:textColor="@color/dark_grey"

            />


    </LinearLayout>


    <ImageView
        android:id="@+id/ivMoreNews"
        android:layout_width="@dimen/arrow_size"
        android:layout_height="@dimen/arrow_size"
        android:src="@drawable/ic_left_arrow"
        android:padding="@dimen/arrow_padding"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" />
</RelativeLayout>