<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/padding3"
    android:clickable="true"
    android:paddingRight="@dimen/padding3"
    android:paddingTop="@dimen/padding3"
    android:background="@color/white">


    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/ivPicPresenter"
        android:layout_width="@dimen/photo_size"
        android:layout_height="@dimen/photo_size"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/question" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/padding2"
        android:layout_toLeftOf="@+id/ivArrowPresenter"
        android:layout_toRightOf="@+id/ivPicPresenter"
        android:orientation="vertical"
        android:background="@color/white">

        <TextView
            android:id="@+id/tvNamePresenter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize_m"
            android:textStyle="normal"

            />

        <TextView
            android:id="@+id/tvDetailsPresenter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/textSize_s"
            android:singleLine="true"
            android:ellipsize="end"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tvDetails2Presenter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/textSize_s"
            android:ellipsize="end"
            android:singleLine="true"
            android:textStyle="normal"

            />
    </LinearLayout>


    <ImageView
        android:id="@+id/ivArrowPresenter"
        android:layout_width="@dimen/arrow_size"
        android:layout_height="@dimen/arrow_size"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/arrow_padding"
        android:src="@drawable/ic_left_arrow" />

    <View
        android:id="@+id/vPresenterChild"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/ivPicPresenter"
        android:layout_marginTop="@dimen/padding3"
        android:background="@color/grey" />


</RelativeLayout>