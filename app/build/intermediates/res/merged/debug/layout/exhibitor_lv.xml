<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:clickable="true"
    android:paddingTop="@dimen/min_padding"
    android:layout_height="match_parent">

    <TextView
        android:layout_marginTop="@dimen/padding2"
        android:id="@+id/tvTitleExhibitors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textSize_m"
        android:textColor="@color/black"
        android:text=""
        android:layout_marginLeft="@dimen/padding4" />

    <TextView
        android:id="@+id/tvLocationExhibitors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="@dimen/textSize_m"
        android:textColor="@color/dark_grey"
        android:layout_marginLeft="@dimen/padding4"
        android:layout_marginBottom="@dimen/min_padding" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey"
        android:layout_marginTop="@dimen/padding2"
        android:layout_marginLeft="@dimen/padding2"
        android:layout_marginRight="@dimen/padding2" />

</LinearLayout>